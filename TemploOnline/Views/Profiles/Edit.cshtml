@model TemploOnline.Models.ViewModels.ProfileViewModel
@{
  var title = "Editar perfil";
  ViewData["Title"] = title;
}

<h1>@title</h1>
<hr>
<form method="post" asp-controller="profiles" asp-action="edit">
  <div class="form-group">
    <label asp-for="@Model.Name"></label>
    <input class="form-control" asp-for="@Model.Name" type="text">
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Nickname"></label>
    <input type="text" class="form-control" asp-for="@Model.Nickname">
    <span asp-validation-for="@Model.Nickname" class="text-danger"></span>
  </div>
  <input asp-for="@Model.Id" type="hidden">
  <input asp-for="@Model.Username" type="hidden">
  @Html.AntiForgeryToken()
  <a asp-action="Index" class="btn bg-light"><i class="fas fa-angle-double-left"></i> Cancelar</a>
  <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Salvar</button>
</form>