@model TemploOnline.Models.ViewModels.ChangePasswordViewModel
@{
  var title = "Mudar senha";
  ViewData["Title"] = title;
}

<h1>@title</h1>
<p class="text-danger">@ViewData["Msg"]</p>
<hr>
<form method="post">
  <div class="form-group">
    <label asp-for="@Model.Password"></label>
    <input asp-for="@Model.Password" class="form-control">
    <span asp-validation-for="@Model.Password" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.ConfirmPassword"></label>
    <input asp-for="@Model.ConfirmPassword" class="form-control">
    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
  </div>
  @Html.AntiForgeryToken()
  <a asp-action="Index" class="btn bg-light"><i class="fas fa-angle-double-left"></i> Cancelar</a>
  <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Salvar</button>
</form>