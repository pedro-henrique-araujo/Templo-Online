@model TemploOnline.Models.ViewModels.CategoryListingViewModel
@{
  var title = "Categorias";
  var description = "Listagem de categorias";
  ViewData["Title"] = $"{title} | {description}";
}

<h1>@title</h1>
<p>@description</p>
<a asp-action="New" class="btn btn-primary"><i class="far fa-file"></i> Novo</a>
<hr>
@if (@Model.Categories.Count() == 0)
{
  <p>NÃ£o existem categorias cadastradas, clique em novo</p>
}
else
{
  <table class="table">
    <tbody>
      @foreach (var categoria in Model.Categories)
      {
        <tr class="row">
          <td class="col-sm-12">
              <a asp-action="Details" asp-route-id="@categoria.Id" class="btn col-sm-12 text-left">
                @categoria.Name
              </a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}