@model TemploOnline.Models.ViewModels.LessonViewModel
@{
  var title = "Editar lição";
  ViewData["Title"] = title;
}

<h1>@title</h1>
<hr>
<form method="post" asp-action="edit">
  <div class="form-group">
    <label asp-for="@Model.LessonNumber"></label>
    <select class="form-control" asp-for="@Model.LessonNumber" asp-items="@Model.LessonNumbers"></select>
    <span asp-validation-for="@Model.LessonNumber" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Name"></label>
    <input asp-for="@Model.Name" type="text" class="form-control">
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
  </div>
  <input asp-for="@Model.Id" type="hidden">
  <input asp-for="@Model.TextbookId" type="hidden">
  @Html.AntiForgeryToken()
  <a 
    asp-action="Details" 
    asp-controller="Textbooks" 
    asp-route-id="@Model.TextbookId" 
    class="btn bg-light">
    <i class="fas fa-angle-double-left"></i> Cancelar
  </a>
  <button type="submit" class="btn btn-primary">
    <i class="far fa-save"></i> Salvar
  </button>
</form>