@model TemploOnline.Models.ViewModels.PersonViewModel
@{
  var title = "Novo irm√£o";
  ViewData["Title"] = title;
}

<h1>@title</h1>
<hr>
<form method="post" asp-action="new">
  <div class="form-group">
    <label asp-for="@Model.Name"></label>
    <input type="text" asp-for="@Model.Name" class="form-control">
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Nickname"></label>
    <input type="text" asp-for="@Model.Nickname" class="form-control">
    <span asp-validation-for="@Model.Nickname" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="@Model.User.UserName">Login</label>
    <input type="text" class="form-control" asp-for="@Model.User.UserName" />
    <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
  </div>

  <div class="form-check">
    <input type="checkbox" class="form-check-input" asp-for="@Model.IsTeacher">
    <label asp-for="@Model.IsTeacher" class="form-check-label"></label>
  </div>

  <div class="form-check mb-3">
    <input type="checkbox" class="form-check-input" asp-for="@Model.IsStudent"/>
    <label asp-for="@Model.IsStudent" class="form-check-label" ></label>
  </div>

  <input type="hidden" asp-for="@Model.Id">
  @Html.AntiForgeryToken()
  <a asp-action="Index" class="btn bg-light"><i class="fas fa-angle-double-left"></i> Cancelar</a>
  <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Salvar</button>
</form>