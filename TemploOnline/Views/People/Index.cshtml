@model TemploOnline.Models.ViewModels.PersonListingViewModel
@{
  var title = "Irmãos";
  ViewData["Title"] = title;
}

<h1>@title</h1>
<a asp-action="New" class="btn btn-primary"><i class="far fa-file"></i> Novo</a>
<hr>
@if (!Model.People.Any())
{
  <p>Não existem irmãos cadastrados, clique em novo</p>
}
else
{
  <table class="table table-hover">
    <tbody>
      @foreach (var person in Model.People)
      {
        <tr class="row">
          <td class="col-sm-12" >
            <a asp-action="Details" asp-route-id="@person.Id" class="btn col-sm-12 text-left">
              @person.Name
              @if (person.Name != person.Nickname)
              {
               <text>(@person.Nickname)</text>
              }
            </a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
